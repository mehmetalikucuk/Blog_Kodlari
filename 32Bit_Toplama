#include "msp430.h"

       ORG 0F800h
reset  mov.w #0280h,SP
       mov.w #WDTPW+WDTHOLD,&WDTCTL
       clr r6
       clr r7
 
       mov &0202h,r6
       mov &0206h,r7
       add r6,r7
       mov r7,&020Ah
       mov &0200h,r6
       mov &0204h,r7
       addc r6,r7
       mov r7,&0208h 
aa     jmp aa
 
       org 0FFFEh
       dw reset
       end
