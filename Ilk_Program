#include "msp430.h"          
          org 0f800h
reset     mov #0280h,SP 
          mov #WDTPW+WDTHOLD,&WDTCTL 
          bis.b #001h,&P1DIR           ;bis kaynak,hedef    P1.0 çıkış olarak ayarlandı

loop      xor.b #001h,&P1OUT           ;P1.0 çıkışı terslendi
          mov #050000,R4
wait      dec R4                       ;dec hedef
          jnz wait                     ;jnz etiket    döngü ile bir süre bekleme sağlandı
          jmp loop

          org 0fffeh
          dw reset
          END
